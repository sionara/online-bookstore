extends common/layout

block main-content 
  h1.page-title 
    a(href="/").link BookTrader
  .container
   .row
    for book in books 
      
      -let bookId = book._id
      -let name = book.title 

      .col.col-sm-6.col-md-4.col-lg-3
        div(class="card text-bg-primary mb-3")
          //- image url: https://www.amazon.ca/Catcher-Rye-J-Salinger-author/dp/0241984750
          img(src="/book.jpg" alt="Image of Book cover").card-img-top 
          div.card-body
            h5.card-title #{name}
            a(href=`/book/${bookId}` class="link-danger").card-link Details
            a(href=`/admin/deleteBook/${bookId}` class="link-danger").card-link Delete this book